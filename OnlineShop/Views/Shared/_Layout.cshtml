<!DOCTYPE HTML>
<html>
<head>
    <title>Free Home Shoppe Website Template</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/assets/client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/assets/client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    @*<script type="text/javascript" src="~/assets/client/js/jquery-1.7.2.min.js"></script>*@
    <script src="https://code.jquery.com/jquery-1.12.4.js"
            integrity="sha256-Qw82+bXyGq6MydymqBxNPYTaUXXq7c8v3CwiYwLLNXU="
            crossorigin="anonymous"></script>
    <link href="~/assets/client/css/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <script type="text/javascript" src="/assets/client/js/move-top.js"></script>
    <script type="text/javascript" src="/assets/client/js/easing.js"></script>
    <script type="text/javascript" src="/assets/client/js/startstop-slider.js"></script>
    <script src="~/assets/client/js/jquery-ui.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            @{Html.RenderAction("TopMenu", "Home"); }
            <div class="header_top">
                <div class="logo">
                    <a href="#"><img src="images/logo.png" alt="" /></a>
                </div>
                @{ Html.RenderAction("HeaderCart", "Home");}
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });</script>
                <div class="clear"></div>
            </div>

            <div class="header_bottom">
                @{Html.RenderAction("MainMenu", "Home"); }
                <div class="search_box">
                    <form action="/tim-kiem" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Nhập từ khóa..."><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>

            @RenderSection("slide", required: false)
        </div>
            <div class="main">
                @RenderBody()
            </div>
        </div>
    <div class="footer">
        @{Html.RenderAction("Footer", "Home"); }
        <div class="copy_right">
            <p>&copy; 2019 home_shoppe. All rights reserved | Design by tuankhoa2009</a></p>
        </div>
    </div>
    <script type="text/javascript">$(document).ready(function() {
			$().UItoTop({ easingType: 'easeOutQuart' });

		});</script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    <script src="/assets/client/js/controller/baseController.js"></script>
    @RenderSection("jsFooter",required:false)
</body>
</html>

