@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/assets/client/js/controller/cartController.js"></script>

}


@if (Model.Count() > 0)
{
    <table class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <td>Mã SP</td>
                <td>Tên SP</td>
                <td>Ảnh SP</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Code</td>
                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.Image" style="width:100px" /></td>
                    <td><input type="number" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" min="1" /></td>
                    <td>@item.Product.Price.GetValueOrDefault(0)</td>
                    <td>@(item.Product.Price.GetValueOrDefault(0) * item.Quantity)</td>
                    <td><div class="btn btn-danger DeleteById"  data-id="@item.Product.ID">Xóa</div></td>
                </tr>
            }
        </tbody>
    </table>
    <div id="btnContinue" class="btn btn-success">Tiếp tục mua hàng</div>
    <div id="btnUpdate" class="btn btn-default">Cập nhật giỏ hàng</div>
    <div id="btnDeleteAll" class="btn btn-default">Xóa giỏ hàng</div>
    <div id="btnPayment" class="btn btn-default">Thanh toán</div>


}
else
{
    <h1>Giỏ hàng rỗng</h1>
}

