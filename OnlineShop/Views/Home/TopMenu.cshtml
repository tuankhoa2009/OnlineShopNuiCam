
@model List<Model.EF.Menu>

@{ 
    var sessionUser = (OnlineShop.Common.UserLogin) Session[OnlineShop.Common.CommonConstants.USER_SESSION];
}

<div class="headertop_desc">
    <div class="call">
        <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></span></p>
    </div>
    <div class="account_desc">
        @if (sessionUser == null)
        {
            <ul>
                @foreach (var item in Model)
                {
                    <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
                }


            </ul>
        }
        else
        {
            <ul>
                <li>Xin chào:@sessionUser.UserName 
                @Html.ActionLink("Đăng xuất","LogOut","User")
                </li>
            </ul>
        }

    </div>
    <div class="clear"></div>
</div>

